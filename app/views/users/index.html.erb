<div class="container">

  <h2>Users</h2>
  <div class="well">
    <%= link_to "New User", new_user_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-user"></div>

  <table id class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>ID#</th>
      <th>Email</th>
      <th>Role</th>
      <th>Updated at</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody id="users">
    <%= render @users %>
    </tbody>
  </table>
  
</div>